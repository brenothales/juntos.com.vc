#page_content
  .container
    .site-partners
      h1 = t('.title')
      h2 = t('.meet_our_partners')

      .site-partners
        - @site_partners.each do |partner|
            = link_to partner.url, target: '_blank' do
              = image_tag partner.logo.regular.url, title: partner.bio, class: 'partner-space'



      = content_for :custom_javascripts do
        javascript:
          $(document).ready(function(){
            $('.partners-details').slick({
              slidesToShow: 1,
              slidesToScroll: 1,
              arrows: false,
              fade: true,
              asNavFor: '.site-partners-nav'
            });
            $('.site-partners-nav').slick({
                slidesToShow: 5,
                slidesToScroll: 1,
                asNavFor: '.partners-details',
                centerMode: true,
                focusOnSelect: true,
                prevArrow: '<button type="button" class="slick-prev custom-arrow"></button>',
                nextArrow: '<button type="button" class="slick-next custom-arrow"></button>'
            });
          });
